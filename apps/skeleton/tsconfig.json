{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@scss/*": [
				"./src/scss/*"
			],
			"@public/*": [
				"./public/*"
			],
			"@data/*": [
				"./src/data/*"
			]
		}
	},
	"rootDir": "src",
	"extends": "../../packages/tsconfig/nextjs.json",
	"include": [
		"types.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
