{
	"name": "create-nextjs-skeleton",
	"version": "0.5.2-canary.5",
	"author": "Jos Broers",
	"license": "MIT",
	"private": true,
	"description": "A simple and highly customizable skeleton build with Turborepo and Next. The skeleton is bootstrapped with [create-next-app](https://nextjs.org/docs/api-reference/create-next-app) and has the following features:",
	"bugs": {
		"url": "https://github.com/SirRedDAB/nextjs-skeleton/issues"
	},
	"main": "scripts/cli.js",
	"keywords": [
		"nextjs",
		"skeleton"
	],
	"bin": {
		"create-nextjs-skeleton": "scripts/cli.js"
	},
	"homepage": "https://nextjs-skeleton.jobrodo.nl/",
	"repository": {
		"url": "git+https://github.com/SirRedDAB/nextjs-skeleton.git",
		"type": "git"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --no-cache --parallel --continue",
		"clean": "rm -rf node_modules && rm yarn.lock",
		"lint": "turbo run lint",
		"prepare": "husky install",
		"upgrade_all": "yarn upgrade-interactive --latest",
		"make_public": "json -I -f package.json -e 'this.private=false'"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"eslint": "^8.5.0",
		"husky": "^7.0.4",
		"json": "^11.0.0",
		"lerna": "^4.0.0",
		"prettier": "^2.5.1",
		"turbo": "1.0.19"
	},
	"volta": {
		"node": "14.18.2",
		"yarn": "1.22.17"
	},
	"engines": {
		"node": ">=14.18.0"
	},
	"turbo": {
		"baseBranch": "origin/main",
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					".next/**"
				]
			},
			"lint": {
				"outputs": []
			},
			"dev": {
				"cache": false
			}
		}
	}
}
