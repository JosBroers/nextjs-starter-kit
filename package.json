{
	"name": "create-nextjs-skeleton",
	"version": "1.0.1-canary.0",
	"author": "Jos Broers",
	"license": "MIT",
	"description": "A simple and highly customizable skeleton build with Turborepo and Next.js. Featuring ESLint, Husky, Preact, Prettier, Sass, TypeScript and much more!",
	"bin": {
		"create-nextjs-skeleton": "scripts/create-nextjs-skeleton/create-project.js"
	},
	"homepage": "https://nextjs-skeleton.jobrodo.nl/",
	"bugs": {
		"url": "https://github.com/SirRedDAB/nextjs-skeleton/issues"
	},
	"keywords": [
		"nextjs",
		"skeleton"
	],
	"repository": {
		"url": "git+https://github.com/SirRedDAB/nextjs-skeleton.git",
		"type": "git"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel --continue",
		"clean": "turbo run clean && sh scripts/clean.sh",
		"lint": "turbo run lint",
		"prepare": "husky install"
	},
	"workspaces": [
		"apps/skeleton",
		"packages/config",
		"packages/lib",
		"packages/tsconfig",
		"packages/ui",
		"scripts/create-nextjs-skeleton"
	],
	"devDependencies": {
		"husky": "^7.0.4",
		"lerna": "^4.0.0",
		"prettier": "^2.5.1",
		"turbo": "1.0.24"
	},
	"volta": {
		"node": "14.18.2",
		"npm": "8.3.0"
	},
	"engines": {
		"node": ">=14.18.0"
	},
	"turbo": {
		"baseBranch": "origin/main",
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					".next/**"
				]
			},
			"lint": {
				"outputs": []
			},
			"dev": {
				"cache": false
			},
			"clean": {
				"cache": false
			}
		}
	}
}
